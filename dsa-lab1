
#include<bits/stdc++.h>
using namespace std;
#define SIZE 7
int arr[SIZE];


int main(){

    for(int i=0;i<SIZE;i++){
        cin>>arr[i];
    }

    for(int i=0;i<SIZE;i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;

    for(int i=0;i<SIZE-1;i++){
        if(i>SIZE/2){
            arr[i]=arr[i+1];
        }
    }

    for(int i=0;i<SIZE-1;i++){
        cout<<arr[i]<<" ";
    }
    
    cout<<endl;

    for(int i=SIZE;i>0;i--){
        if(i>SIZE/2){
            arr[i]=arr[i-1];
        }
    }
    
    int b;
    cout<<"enter the number : "<<endl;
    cin>>b;
    

    arr[SIZE/2]=b;

    for(int i=0;i<SIZE;i++){
        cout<<arr[i]<<" ";
    }
    
    cout<<endl;




}
